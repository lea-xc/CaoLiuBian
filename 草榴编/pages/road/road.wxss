/* pages/road/road.wxss */
.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

/* 小地图容器，右下角 */
.mini-map-container {
  position: fixed;
  width: 200rpx;
  height: 200rpx;
  right: 20rpx;
  bottom: 120rpx; 
  z-index: 10;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  border-radius: 16rpx;
  overflow: hidden;
  background: white;
}
/* 透明点击区域*/
.marker-tap-zone {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: transparent;
  z-index: 5;
}

/* 全屏背景图 */
.route-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
}
.route-image-section {
  height: 100%;
  position: relative;
}

/* 以下每个点的位置根据总图图标微调 */
.zone-1 { top: 0.1%;  left: 36%;  }
.zone-2 { top: 14%; right: 38%; }
.zone-3 { top: 27%; left: 26%; }
.zone-4 { top: 40%; right: 46%; }
.zone-5 { top: 54%; right: 8%; }
.zone-6 { top: 66%; right: 51%; }
.zone-7 { top: 80%; left: 1%; }
.zone-8 { top: 93%; right: 1%; }

.route-image {
  width: 100%;
  height: 100%;
}

/* 地图区域 */
.map-section {
  height: 40%;
  position: relative;
}

.popup-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 100;
}

.popup-glass {
  position: fixed;
  bottom: 0;
  width: 100vw;
  padding: 24rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  z-index: 101;
}

.popup-header {
  display: flex;
  align-items: center;
}

.popup-img {
  width: 160rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.popup-info {
  flex: 1;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #222;
}

.popup-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  max-height: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.popup-footer {
  margin-top: 24rpx;
  display: flex;
  justify-content: center;
}

.btn-detail {
  background: linear-gradient(90deg, #5cb6ff, #4e90fe);
  color: white;
  font-size: 28rpx;
  border-radius: 100rpx;
  padding: 16rpx 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.location-btn {
  position: fixed;
  right: 24rpx;
  bottom: 200rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: white;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}

.location-icon {
  width: 48rpx;
  height: 48rpx;
}




