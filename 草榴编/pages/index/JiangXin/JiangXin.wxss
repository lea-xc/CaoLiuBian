/* pages/YiShu/YiShu.wxss */
.gallery-container {
    background: #f5f5f5;
    min-height: 100vh;
    padding: 30rpx;
  }
  
  .masonry-grid {
    column-count: 2;
    column-gap: 20rpx;
  }
  
  .art-card {
    position: relative; /* 新增定位上下文 */
    display: flex;      /* 新增flex布局 */
    flex-direction: column;
    break-inside: avoid;
    margin-bottom: 20rpx;
    background: white;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  }
  
  .art-image {
    width: 100%;
    height: 360rpx;
    display: block;     /* 关键修复 */
    object-fit: cover;  /* 新增适配模式 */
    flex-shrink: 0;     /* 防止图片压缩 */
  }
  
  