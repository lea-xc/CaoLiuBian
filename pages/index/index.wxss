/* pages/index/index.wxss */


.header {
    justify-content: space-between;
    align-items: flex-start; 
    padding: 0 30rpx; 
    background-color: #fff;
    height: 88rpx;
  }
  
  .left-header {
    display: flex;
    align-items: center;
    height: 100%; /* 继承父级高度 */
    padding-top: 10rpx; /* 微调垂直位置 */
  }
  
  .green-circle {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background-color: #09b367;
    margin-right: 15rpx;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    line-height: 1.2; /* 调整行高 */
  }
  .search-bar {
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    gap: 20rpx; /* 元素间距 */
  }
  
  .search-input {
    flex: 3; /* 3/4宽度 */
    height: 72rpx;
    background: #f5f5f5;
    border-radius: 40rpx;
    padding: 0 30rpx;
    display: flex;
    align-items: center;
    position: relative;
  }
  
  .search-input-field {
    flex: 1;
    height: 100%;
    font-size: 28rpx;
    padding-right: 160rpx; /* 给工具图标留空间 */
  }
  
  .inline-tools {
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: 20rpx;
  }
  
  .search-btn {
    flex: 1; /* 1/4宽度 */
    max-width: 180rpx;
    background: #09b367;
    color: white;
    font-size: 28rpx;
    height: 72rpx;
    line-height: 72rpx;
    border-radius: 36rpx;
    margin: 0;
    padding: 0;
  }
  
  
  .function-area {
    padding: 30rpx;
  }
  
  .section {
    margin-bottom: 40rpx;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    display: block;
  }
  
  .content-placeholder {
    height: 300rpx;
    background: #f5f5f5;
    border-radius: 20rpx;
  }
  