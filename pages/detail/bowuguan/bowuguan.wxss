/* pages/detail/madahu/madahu.wxss */
.page {
  background-color: #f9f9f9;
}

.header-img {
  width: 100%;
  height: 300rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.title-section {
  padding: 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.tag {
  display: inline-block;
  background-color: #dff0d8;
  color: #3c763d;
  padding: 4rpx 12rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.rating {
  font-size: 26rpx;
  color: #888;
  margin-top: 6rpx;
}

.section {
  padding: 24rpx;
  background-color: #fff;
  margin-top: 16rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.section-text {
  font-size: 28rpx;
  color: #444;
  line-height: 1.6;
}

.info-item {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.label {
  color: #555;
  font-weight: bold;
}

button {
  margin-top: 20rpx;
  width: 100%;
}
